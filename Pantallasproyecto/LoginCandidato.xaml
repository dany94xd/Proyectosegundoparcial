<Window x:Name="wincandi" x:Class="LoginCandidato"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LoginCandidato" Height="300" Width="300" Closing="Window_Closing">
    <Grid Background="#FFA1DBE4">
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Image Height="103" Margin="76,10,82,0" VerticalAlignment="Top" Width="134" Source="image/cand1a.jpg" Stretch="Fill"/>
        <Label Content="User:" Height="30" Margin="43,10,184,0" VerticalAlignment="Top" Width="65" Grid.Row="1"/>
        <Label Content="Password:" Height="30" Margin="43,46,184,0" VerticalAlignment="Top" Width="65" Grid.Row="1"/>
        <TextBox x:Name="txtusercand" Height="20" Margin="158,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" Grid.Row="1"/>
        <PasswordBox x:Name="passcand" Margin="158,46,0,0" VerticalAlignment="Top" Width="104" Grid.Row="1"/>
        <Button x:Name="btnlogincan" Content="Login" Margin="172,19.329,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Click="Button_Click"/>
        <Button x:Name="btnregresar" Content="Regresar" HorizontalAlignment="Left" Margin="43,19,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
